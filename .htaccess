RewriteEngine On

# Handle /user/ URLs
RewriteRule ^user/?$ user/index.php [L]
RewriteRule ^user/profile/?$ user/profile.php [L]

# Handle /admin/ URLs
RewriteRule ^admin/?$ admin/index.php [L]

# Handle /main/ URLs
RewriteRule ^main/?$ main/index.php [L]

# Prevent directory listing
Options -Indexes

# Handle 404 errors
ErrorDocument 404 /main/404.php 